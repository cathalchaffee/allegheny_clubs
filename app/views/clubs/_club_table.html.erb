<h1 class="title">Allegheny Club List</h1>
<div class="well spaced">
  <table class="table table-striped table-bordered ">
    <thead>
      <tr>
        <th>Name</th>
        <th>About</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @all_clubs.each do |club| %>
        <tr>
          <td><b><%= club.name %></b></td>
          <td><%= club.about %></td>
          <td>Join!</td>
          <% if club.users.find_by(id: @current_user.id) %><td><%= link_to 'Show', club %></td><% end %>
          <% if @current_user.last_name == "Chaffee" %><td><%= link_to 'Edit', edit_club_path(club) %></td><% end %>
          <% if @current_user.last_name == "Chaffee" %><td><%= link_to 'Destroy', club, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
